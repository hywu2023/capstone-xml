<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/ll_rv_item_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:background="@drawable/item_list">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="10"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/rl_rv_item_list_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center">


                <!--<androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/selected_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="170dp"
                    android:background="@drawable/selector_check_button"/>-->


                <TextView
                    android:id="@+id/txt_rv_item_list_mediName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="medName"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/etc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="3dp"
                    android:text="하루"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_rv_item_list_timesPerDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/etc2"
                    android:text="0"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/txt_rv_item_list_timesPerDay"
                    android:text="번"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_rv_item_list_mediList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="medList"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/rl_rv_item_list_2"
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:layout_below="@id/txt_rv_item_list_mediList"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:id="@+id/txt_rv_item_list_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txt_rv_item_list_tue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_rv_item_list_mon"
                        android:text="화"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txt_rv_item_list_wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_rv_item_list_tue"
                        android:text="수"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txt_rv_item_list_thu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_rv_item_list_wed"
                        android:text="목"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txt_rv_item_list_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_rv_item_list_thu"
                        android:text="금"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txt_rv_item_list_sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_rv_item_list_fri"
                        android:text="토"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txt_rv_item_list_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_rv_item_list_sat"
                        android:text="일"
                        android:textSize="16dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:layout_below="@id/rl_rv_item_list_2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txt_rv_item_list_startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/etc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/txt_rv_item_list_startDate"
                        android:text="~"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_rv_item_list_endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/etc"
                        android:text="00"
                        android:textSize="14dp" />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/baseline_more_vert_24"
                android:id="@+id/btn_go_setting"/>



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>